{
  "version": 2,
  "builds": [
    {
      "src": "src/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.py"
    }
  ],
  "devCommand": "python ./src/main.py",
  "installCommand": "pip install -r requirements.txt",
  "outputDirectory": "api",
  "startCommand": "gunicorn --bind 0.0.0.0:$PORT src.main:app" 
}